<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:showIn="@layout/activity_tela_pedidos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/container_pedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        style="@style/EditTextComponentList"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:id="@+id/nome_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Rafaela Vieira" />

        <TextView
            android:id="@+id/valor_view"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@id/nome_view"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:text="R$ 254.00" />

        <TextView
            android:id="@+id/data_view"
            android:layout_below="@id/nome_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="10/05/2022"
            android:layout_alignStart="@id/nome_view"/>

        <TextView
            android:id="@+id/status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/valor_view"
            android:layout_alignEnd="@id/valor_view"
            android:layout_toStartOf="@id/data_view"
            android:layout_marginTop="2dp"
            android:drawableRight="@drawable/done_icon"
            android:text="Status : Pago " />

    </RelativeLayout>

</androidx.cardview.widget.CardView>