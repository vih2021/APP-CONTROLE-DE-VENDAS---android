<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:showIn="@layout/activity_tela_visualizar_pedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="10px"
        android:background="#C8A31313"
        android:id="@+id/container_pedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/nome_view"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="CalÃ§a legging - 112464654" />

        <TextView
            android:id="@+id/valor_view"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@id/nome_view"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:text="R$ 254.00"
            />

        <TextView
            android:id="@+id/unidades_view"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_view"
            android:layout_alignStart="@id/nome_view"
            android:layout_marginTop="2dp"
            android:text="unid: 23"
            android:singleLine="true"/>


        <TextView
            android:id="@+id/tamanho_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/valor_view"
            android:layout_alignEnd="@id/valor_view"
            android:layout_toStartOf="@id/unidades_view"
            android:layout_marginTop="2dp"
            android:text="Tamanho : P "
            android:singleLine="true"/>

        <TextView
            android:id="@+id/cor_view"
            android:layout_width="370px"
            android:layout_height="wrap_content"
            android:layout_below="@id/valor_view"
            android:layout_alignEnd="@id/nome_view"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/unidades_view"
            android:singleLine="true"
            android:text="Cor: acizentado roxo" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>